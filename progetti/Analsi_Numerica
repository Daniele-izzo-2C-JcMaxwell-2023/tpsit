    <div class="container my-5 text-center">
        <p>Analisi Numerica In Un Container </p>
        <button type="button" class="btn btn-primary" onclick="Stampa_1()">Stampa numeri da 1 a 100</button>
        <p id="Output_1"></p>
        <button type="button" class="btn btn-success" onclick="Stampa_2()">Stampa numeri da 1 a 100 in un array</button>
        <p id="Output_2"></p>
        <button type="button" class="btn btn-info" onclick="Stampa_3()">Stampa solo numeri pari in un array da 1 a 100</button>
        <p id="Output_3"></p>
        <button type="button" class="btn btn-danger" onclick="Stampa_4()">Stampa solo numeri dispari in un array da 1 a 100</button>
        <p id="Output_4"></p>
      </div>
    <script>
  function Stampa_1 () {
    let i=1;
    let Numeri = "";
    do {
      Numeri += i + " ";
      i++
    }
    while (i<=100);
    document.getElementById("Output_1").innerHTML = Numeri;
}
function Stampa_2() {
    let i=1;
    let ArreyNumeri = [];
    let cont = 0;
    do {
      ArreyNumeri.push(i);
      i++
    }
    while (i<=100);
    document.getElementById("Output_2").innerHTML = ArreyNumeri.join(" ");
}
function Stampa_3() {
    let i=1;
    let ArreyNumPari = [];
    do {
      if (i%2==0){
        ArreyNumPari.push(i);
      }
      i++
    }
    while (i<100);
    document.getElementById("Output_3").innerHTML = ArreyNumPari.join(" ");
}
function Stampa_4() {
    let i=1;
    let ArreyNumDispari = [];
    do {
      if (i%3==0){
        ArreyNumDispari.push(i);
      }
      i++
    }
    while (i<100);
    document.getElementById("Output_4").innerHTML = ArreyNumDispari.join(" ");
}
  </script>
